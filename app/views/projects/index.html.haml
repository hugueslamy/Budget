%h1 Listing projects

= link_to 'New Project', new_project_path

%table
	%tr
		%th Name
		%th
		%th
	- @projects.each do |project|
		%tr
			%td= link_to( project.name, project )
			%td= link_to 'Edit', edit_project_path(project)
			%td= link_to 'Destroy', project, confirm: 'Are you sure?', method: :delete

%br/

