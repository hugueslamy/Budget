%h1 Listing accounts

%div.btn-group
	%a.btn.dropdown-toggle{"data-toggle" => 'dropdown', :href => '#'}
		Actions
		%span.caret
	%ul.dropdown-menu
		%li= link_to 'New Account', new_account_path
%br/
%table.table
	%tr
		%th.span3
		%th Name
		%th	Project
		%th.span3

	- @accounts.each do |account|
		%tr
			%td 
				= link_to edit_account_path(account), :class => 'btn btn-small' do
					Edit
					%i.icon-pencil
			%td= link_to account.name, account
			%td= account.try( :project ).try( :name )
			%td
				= link_to account, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-small btn-danger' do
					Delete
					%i.icon-trash
