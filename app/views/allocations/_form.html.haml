= semantic_form_for @allocation, :html => {:class => 'form-horizontal'}  do |f| 
	- if @allocation.errors.any? 
		%div#error_explanation
			%h2
				= pluralize(@allocation.errors.count, "error")
				prohibited this allocation from being saved:

			%ul
			- @allocation.errors.full_messages.each do |msg|
				%li= msg 

	.field
		= f.inputs do
			= f.input :account, :as => :select
			= f.input :title
			= f.input :value
			= f.input :effective_date, :as => :string
			= f.input :note, :input_html => {:class => 'autogrow', :rows => 5, :cols => 40}
  
		= f.actions do
			= f.action :submit, :as => :button