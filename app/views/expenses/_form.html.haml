= form_for([@account.project, @account, @expense]) do |f|
	- if @expense.errors.any?
		#error_explanation
			%h2 #{pluralize(@expense.errors.count, "error")} prohibited this expense from being saved:

			%ul
				- @expense.errors.full_messages.each do |msg|
					%li= msg

	.field
		= f.label :value
		%br/
		= f.text_field :value
		
	.field
		=f.label :description
		%br/
		= f.text_field :description
		
	.field
		=f.label :accrue
		%br/
		=f.check_box :accrue

	.field
		= f.label :effective_date
		%br/
		= f.date_select :effective_date
	.actions
		= f.submit
