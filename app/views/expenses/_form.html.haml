= semantic_form_for @expense, :html => {:class => 'form-horizontal unstyled'} do |f|
	- if @expense.errors.any?
		#error_explanation
			%h2 #{pluralize(@expense.errors.count, "error")} prohibited this expense from being saved:

			%ul
				- @expense.errors.full_messages.each do |msg|
					%li= msg

	.field
		= f.inputs do
			= f.input :account, :collection => @expense.account.project.accounts
			= f.input :supplier			
			= f.input :title
			= f.input :value
			= f.input :effective_date, :as => :string
			= f.input :accrue
			= f.input :description

	=f.actions do
		= f.action :submit, :as => :button